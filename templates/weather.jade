doctype html
html
	include ./partials/_weather_head.jade
	body.container(ng-app="weatherApp")
		.jumbotron
			h1 LocalWeatherApp
			h2 #[a(href="") Back to nateconley.com]
		.weather-info.col-sm-4.col-sm-offset-4(ng-controller="location")
			.row
				.col-sm-10.col-sm-offset-1
					.search
						.input-group
							span.input-group-btn
								button.btn.btn-default(type="button", ng-click="geolocation()") #[i.fa.fa-location-arrow]
							input.form-control(type="text", ng-model="zipCode", placeholder="ZIP code")
							span.input-group-btn
								button.btn.btn-default(type="submit" ng-click="zip()") #[i.fa.fa-search]

			.row.loading
				.col-sm-10.col-sm-offset-1
					p Getting weather data...
					.progress
						.progress-bar.progress-bar-striped.active(role="progressbar", aria-valuenow="60", aria-valuemin="0", aria-valuemax="100", style="width: 60%;")
			.row
				.col-sm-10.col-sm-offset-1
					.display-weather
						h2 {{city}}
						h1 {{temperature}}
						p {{condition}}
						.btn-group(role="group")
							button.btn.btn-primary(type="button") F
							button.btn.btn-default(type="button") C

	include ./partials/_weather_footer.jade
